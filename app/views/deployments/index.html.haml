- content_for :title, I18n.t('deployments.index.teach_with_cases')


.admin.md-container.bp4-dark
  %header.md-header
    %h1.admin__title= t '.teach_with_cases'

  %aside.md-master.spaced
    %h2.admin__title= t '.deploy_a_case'
    .bp4-running-text= raw markdown t '.instructions'

    .bp4-callout.bp4-icon-hand-right
      = t '.find_a_case_then_click_teach_this_case'

    = form_with url: '/catalog/search', local: true, method: :get do
      .bp4-input-group.bp4-round
        %span.bp4-icon.bp4-icon-search
        %input.bp4-input{ type: 'text', name: 'q',
                         placeholder: I18n.t('search.search_cases') }
          %span.bp4-input-action
            %button.bp4-button.bp4-minimal.bp4-icon-arrow-right(type="submit")

  %main.md-detail
    - if deployments.empty?
      .bp4-non-ideal-state
        .bp4-non-ideal-state-visual.bp4-non-ideal-state-icon
          %span.bp4-icon.bp4-icon-folder-open
        %h3.bp4-non-ideal-state-title= t '.youre_not_teaching_any_cases'
        .bp4-non-ideal-state-description= t '.once_youve_deployed'

    -else
      .spaced
        - deployments.grouped.each do |group, group_deployments|
          %h2.deployments__group= group.name

          - group_deployments.each do |deployment|
            = render deployment
