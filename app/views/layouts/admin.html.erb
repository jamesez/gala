<nav class="Toolbar__bar bp4-dark">
  <div class="MaxWidthContainer">
    <div class="Toolbar__group bp4-navbar-group">
      <%= link_to t('catalog.catalog'), root_path,
                  class: 'bp4-button bp4-minimal bp4-icon-home' %>
      <%= link_to my_cases_nav_button_text, my_cases_path,
                  class: 'bp4-button bp4-minimal bp4-icon-annotation' %>
      <%= link_to deployments_nav_button_text, deployments_path,
                  class: 'bp4-button bp4-minimal bp4-icon-follower' %>
    </div>

    <div class="Toolbar__group bp4-navbar-group"></div>

    <div class="Toolbar__group bp4-navbar-group">
      <%= form_with url: '/catalog/search', local: true, method: :get do %>
        <div class="bp4-input-group bp4-round">
          <span class="bp4-icon bp4-icon-search"></span>
          <input class="bp4-input" name="q" placeholder="<%= I18n.t('search.search_cases') %>" type="text">
            <span class="bp4-input-action">
              <button type="submit" class="bp4-button bp4-minimal bp4-icon-arrow-right"></button>
            </span>
          </input>
        </div>
      <% end %>
    </div>
  </div>
</nav>

<div class="window window-admin">
  <div class="MaxWidthContainer">
    <%= yield %>
  </div>
</div>

<% parent_layout 'with_header' %>
